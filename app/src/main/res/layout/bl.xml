<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="辩论大厅"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/text_blue"
        />

    <RelativeLayout
        android:background="@mipmap/blbg1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@mipmap/pic2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_marginBottom="90dp"
            android:id="@+id/imageView9" />

        <ImageView
            android:src="@mipmap/pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/imageView9"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:id="@+id/imageView11" />

        <Button
            android:text="发言"
            android:textSize="20dp"
            android:background="@color/transparent"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/button4"
            android:layout_below="@+id/imageView15"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/pic1"
            android:id="@+id/imageView3"
            android:layout_alignTop="@+id/imageView"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/pic3"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3" />

        <ImageView
            android:src="@mipmap/pic4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView15"
            android:layout_alignTop="@+id/imageView11"
            android:layout_toRightOf="@+id/imageView11"
            android:layout_toEndOf="@+id/imageView11" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/pic5"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/pic6"
            android:id="@+id/imageView2"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/imageView21"
            android:layout_alignStart="@+id/imageView21"
            android:layout_above="@+id/imageView26" />

        <ImageView
            android:src="@mipmap/pic7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/button4"
            android:layout_toRightOf="@+id/imageView15" />

        <ImageView
            android:src="@mipmap/blbg2"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginTop="37dp"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


</LinearLayout>